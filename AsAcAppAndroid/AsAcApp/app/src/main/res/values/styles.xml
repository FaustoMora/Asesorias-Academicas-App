<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="myDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="myDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:alertDialogTheme">@style/Theme_Sphinx_Dialog_Alert</item>
    </style>

    <style name="Theme_Sphinx_Dialog_Alert" parent="@style/Theme_Holo_Dialog_Alert"></style>


    <!-- Local copy of android:Theme.Holo.Dialog.Alert -->
    <style name="Theme_Holo_Dialog_Alert" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowTitleStyle">@style/DialogWindowTitle_Holo</item>
    </style>

    <!-- Local copy of android:DialogWindowTitle.Holo -->
    <style name="DialogWindowTitle_Holo">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.DialogWindowTitle</item>
    </style>

    <style name="Widget.Sphinx.Button.Borderless" parent="@android:style/Widget.Holo.Light">
        <item name="android:textColor">@color/blue_asac</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.Light.NoActionBar" />

</resources>
